<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.struggleassist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".View.Notifications.NotificationReceiver">
            <intent-filter>
                <action android:name="com.struggleassist.View.Notifications.Notification.cancelAction"/>
                <action android:name="com.struggleassist.View.Notifications.Notification.confirmAction"/>
                <action android:name="com.struggleassist.View.Notifications.Notification.timeoutAction"/>
            </intent-filter>
        </receiver>
        <activity android:name=".View.Activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Activities.CreateProfileActivity" />
        <activity
            android:name=".View.Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".View.Activities.LaunchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.struggleassist.View.Activities.LaunchActivity" />
        </activity>
    </application>

</manifest>