<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.struggleassist">

    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".Controller.FallDetection.FallDetection"
            android:exported="false"
            />

        <receiver android:name=".View.Notifications.NotificationReceiver">
            <intent-filter>
                <action android:name="com.struggleassist.View.Notifications.Notification.cancelAction" />
                <action android:name="com.struggleassist.View.Notifications.Notification.confirmAction" />
                <action android:name="com.struggleassist.View.Notifications.Notification.timeoutAction" />
            </intent-filter>
        </receiver>

        <activity android:name=".View.Activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Activities.Profile.CreateProfileActivity" />
        <activity
            android:name=".View.Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".View.Activities.LaunchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.struggleassist.View.Activities.LaunchActivity" />
        </activity>
        <activity
            android:name=".View.Activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.Activities.Profile.ViewProfileActivity"></activity>
    </application>

</manifest>