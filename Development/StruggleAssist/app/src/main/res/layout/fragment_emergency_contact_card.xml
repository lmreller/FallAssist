<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.struggleassist.View.Activities.EmergencyContactCardFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmergencyContactCardTitle"
        android:text="Emergency Contact"
        android:textSize="25dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/emergencyContactFragmentBreakLine"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_margin="5dp"
        android:maxHeight="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyContactCardTitle"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ivEmergencyContact"
        android:layout_margin="10dp"
        android:src="@mipmap/struggleassist_icon"
        android:padding="1dp"
        android:maxWidth = "50dp"
        android:maxHeight= "50dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergencyContactFragmentBreakLine"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmergencyContactName"
        android:text="Emergency Contact Name"
        android:textSize = "25dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivEmergencyContact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmergencyContactNumber"
        android:text="Emergency Contact Number"
        android:textSize="15dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyContactName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/emergencyContactFragmentBreakLine2"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_margin="5dp"
        android:maxHeight="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyContactNumber"/>

</android.support.constraint.ConstraintLayout>